<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new"
                android:id="@+id/newLogBtn"
                android:layout_marginLeft="460dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchLog"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logList"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/searchLog"
        android:divider="@drawable/abc_ab_transparent_light_holo"
        style="@style/Widget.AppCompat.ListView.DropDown"
        />
    </RelativeLayout>


